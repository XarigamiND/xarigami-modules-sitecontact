                                <xar:if condition="!empty($sctype['exporturl'])">
                                    <a href="#$sctype['exporturl']#" title="'xarML('Export contact form to XML).'"><xar:mlstring>Export</xar:mlstring></a>
                                <xar:else />
                                    <xar:mlstring>Export</xar:mlstring>
                                </xar:if>

