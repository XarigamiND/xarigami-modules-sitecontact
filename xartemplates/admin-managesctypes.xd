                    <xar:set name="updatebutton"><xar:mlstring>Update Form</xar:mlstring></xar:set>
                        <input type="submit" value="#$updatebutton#" />
                </div>
                </form>


             <xar:comment> ****** DELETE SITECONTACT FORM ****** </xar:comment>
