                    </xar:foreach>
                </tbody>
                </table>
                <div class="xar-form-input-wrapper">
                <p><a href="#xarModURL('sitecontact','admin','importcontactform')#">
                <xar:mlstring>Import Sitecontact Form from XML</xar:mlstring></a>
                </p></div>
                <xar:if condition="!empty($pager)">
                <div class="xar-form-footer">
                #$pager#
