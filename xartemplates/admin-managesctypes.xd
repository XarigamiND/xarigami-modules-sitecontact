                            <xar:else />
                                <xar:data-input type="email" id="useremail" name="useremail" class="xar-form-textxlong" value="" /><xar:mlstring>(required)</xar:mlstring>
                            </xar:if>
                        </div>

                        <div class="xar-form-input-wrapper">
